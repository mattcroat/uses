{
  "base styles": {
    "prefix": "reset",
    "description": "base CSS styles",
    "body": [
      "@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap');",
      "",
      "*,",
      "*::before,",
      "*::after {",
      "\tmargin: 0;",
      "\tpadding: 0;",
      "\tbox-sizing: border-box;",
      "}",
      "",
      ":root {",
      "\t--font-serif: 'Poppins', sans-serif;",
      "\t--font-16: 1.6rem;",
      "\t--font-18: 1.8rem;",
      "\t--font-24: 2.4rem;",
      "\t--font-32: 3.2rem;",
      "\t--font-80: 8rem;",
      "",
      "\t--spacing-4: 0.4rem;",
      "\t--spacing-8: 0.5rem;",
      "\t--spacing-16: 1.6rem;",
      "\t--spacing-20: 2rem;",
      "\t--spacing-24: 2.4rem;",
      "\t--spacing-32: 3.2rem;",
      "}",
      "",
      "html {",
      "\tfont-size: 62.5%;",
      "}",
      "",
      "html,",
      "body {",
      "\theight: 100%;",
      "}",
      "",
      "body {",
      "\tfont-family: 'Poppins', sans-serif;",
      "\tfont-size: var(--font-18);",
      "\tcolor: hsl(0 0% 98%);",
      "\tbackground-color: hsl(220 20% 14%);",
      "}",
      "",
      "h1 {",
      "\tfont-size: var(--font-32);",
      "}",
      "",
      "h2 {",
      "\tfont-size: var(--font-24);",
      "}",
      "",
      "a {",
      "\tfont-weight: 700;",
      "\ttext-decoration: none;",
      "\tcolor: tomato;",
      "}",
      "",
      "a:hover {",
      "\ttext-decoration: underline;",
      "}"
    ]
  },
  "media query": {
    "prefix": "media",
    "description": "Media query ",
    "body": [
      "@media (min-width: $1) {",
      "  $2",
      "}"
    ]
  },
  "container": {
    "prefix": "container",
    "description": "container",
    "body": [
      ".container {",
      "\twidth: 100%;",
      "\tmax-inline-size: 1440px;",
      "\tmargin-inline: auto;",
      "}"
    ]
  }
}