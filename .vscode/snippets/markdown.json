{
  "post": {
    "prefix": "post",
    "description": "Create new post  ",
    "body": [
      "---",
      "title: ${1:title}",
      "description: ${2:description}",
      "slug: ${3:slug}",
      "published: '${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}'",
      "category: ${4:category}",
      "draft: true",
      "---",
      "",
      "## Table of Contents",
      "",
      "$5"
    ]
  },
  "link": {
    "prefix": "link",
    "description": "Link",
    "body": [
      "[${1:alt}](${2:url})"
    ]
  },
  "image": {
    "prefix": "image",
    "description": "Image",
    "body": [
      "{% img src=\"$1.webp\" alt=\"$2\" %}"
    ]
  },
  "code": {
    "prefix": "code",
    "description": "Code",
    "body": [
      "```$1:$2.${1} showLineNumbers",
      "$3",
      "```"
    ]
  },
  "youtube": {
    "prefix": "embed",
    "description": "Embed",
    "body": [
      "{% embed src=\"$1\" title=\"$2\" %}"
    ]
  },
  "video": {
    "prefix": "video",
    "description": "Video",
    "body": [
      "{% video src=\"$1.mp4\" %}"
    ]
  },
  "YouTube": {
    "prefix": "youtube",
    "description": "YouTube",
    "body": [
      "{% youtube id=\"$1\" title=\"$2\" %}"
    ]
  },
  "REPL": {
    "prefix": "repl",
    "description": "StackBlitz",
    "body": [
      "{% embed src=\"https://stackblitz.com/github/joysofcode/$1?ctl=1&embed=1&file=src%2Froutes%2F%2Bpage.svelte&view=preview&title=$2\" title=\"$2\" %}"
    ]
  }
}
