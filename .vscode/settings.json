{
	// Interface
	"window.title": "${activeEditorShort}",
	"window.titleBarStyle": "native",
	"window.customTitleBarVisibility": "never",
	"window.menuBarVisibility": "hidden",
	"window.commandCenter": false,
	"window.zoomLevel": 1,
	"workbench.colorTheme": "poimandres-noitalics",
	"workbench.iconTheme": "symbols",
	"workbench.startupEditor": "none",
	"workbench.sideBar.location": "left",
	"workbench.layoutControl.enabled": false,
	"workbench.editor.enablePreview": false,
	"workbench.editor.labelFormat": "short",
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.showTabs": "none",
	"workbench.tree.enableStickyScroll": false,
	"workbench.tree.indent": 18,
	"workbench.activityBar.location": "hidden",
	"workbench.statusBar.visible": true,
	"workbench.panel.showLabels": false,
	"editor.folding": false,
	"editor.glyphMargin": false,
	"editor.lineNumbers": "on",
	"editor.lightbulb.enabled": "off",
	"editor.minimap.enabled": false,
	"editor.bracketPairColorization.enabled": false,
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.scrollbar.horizontalScrollbarSize": 4,
	"editor.scrollbar.verticalScrollbarSize": 4,
	"editor.stickyScroll.enabled": false,
	"explorer.compactFolders": false,
	"explorer.autoReveal": false,
	"breadcrumbs.enabled": true,
	"breadcrumbs.symbolPath": "off",
	"symbols.hidesExplorerArrows": false,
	// Font
	"editor.fontFamily": "Monaspace Neon, MonoLisa, Geist Mono, Monocraft, JetBrains Mono, IBM Plex Mono, Mononoki Nerd Font, Droid Sans Mono, Anonymous Pro, Operator Mono Book, Fira Code, Cascadia Code",
	"editor.fontSize": 16,
	"editor.lineHeight": 2,
	"editor.tabSize": 2,
	"editor.wordWrap": "on",
	// Terminal
	"terminal.integrated.fontFamily": "Monaspace Neon, MonoLisa, Monocraft, JetBrains Mono, IBM Plex Mono, Mononoki Nerd Font, Fira Code",
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorBlinking": false,
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.shellIntegration.decorationsEnabled": "never",
	// Emmet
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	// Prettier
	"prettier.semi": false,
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "es5",
	"prettier.printWidth": 100,
	// Formatting
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	// Svelte
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"svelte.enable-ts-plugin": true,
	// Linux multi-cursor
	"editor.multiCursorModifier": "ctrlCmd",
	// Telemetry
	"telemetry.telemetryLevel": "all",
	// Git
	"diffEditor.renderSideBySide": false,
	// Tailwind
	"files.associations": {
		"*.css": "tailwindcss"
	},
	// GitLens
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.statusBar.enabled": true,
	// CodeSnap
	"codesnap.showWindowControls": false,
	"codesnap.showLineNumbers": false,
	"codesnap.shutterAction": "copy",
	"codesnap.containerPadding": "0",
	"codesnap.roundedCorners": false,
	"codesnap.boxShadow": "none",
	// CSS variables autocomplete
	"cssvar.files": ["./node_modules/open-props/open-props.min.css"],
	"cssvar.ignore": [],
	"cssvar.extensions": ["css", "postcss", "svelte", "tsx"],
	// Search
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/.svelte-kit": true
	},
	"search.quickOpen.includeHistory": false,
	// Linked editing
	"editor.linkedEditing": true,
	// Respect keyboard mappings
	"keyboard.dispatch": "keyCode",
	// GitHub
	"githubPullRequests.fileListLayout": "tree",
	"githubPullRequests.pullBranch": "never"
}
